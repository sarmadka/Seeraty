صنف الـترويسة {
    @حقنة عرف مركب: مـركب؛

    عملية هذا~هيئ() {
        عرف هذا_الكائن: سند[هذا_الصنف](هذا)؛
        هذا.المشهد = صـندوق({ }).{
            الطراز.{
                العرض = "calc(100% - 20pt)"؛
                الحشوة = ربـاعية(10، 10, 20, 10)؛
                ملء_السطر = "space-between"؛
                المحاذاة = "start"؛
                الإظهار = "flex"؛
                النسق = "column"؛
            }؛
            أضف_فروع({
                صـندوق({ }).{
                    الطراز.{
                        الإظهار = "flex"؛
                        النسق = "column"؛
                        ملء_السطر = "space-between"؛
                        المحاذاة = "start"؛
                        حجم_الخط = 12؛
                    }؛
                    أضف_فروع({
                        كـتابة(نـص(
                            "سرمد خالد عبد الله"
                        )).{
                            الطراز.{
                                حجم_الخط = 18؛
                            }
                        }،
                        كـتابة(نـص(
                            "مهندس برمجيات"
                        ))،
                        ارتـباط_تشعبي(
                            نـص("https://github.com/sarmadka")،
                            كـتابة(نـص("https://github.com/sarmadka"))
                        )،
                        ارتـباط_تشعبي(
                            نـص("https://www.linkedin.com/in/sarmadka")،
                            كـتابة(نـص("https://www.linkedin.com/in/sarmadka"))
                        )،
                        كـتابة(نـص(
                            "مهندس برمجيات بخبرة تزيد على 20 سنة. مبتكر لغة الأسس البرمجية ومدير مشروع تطويرها."
                        ))،
                    })؛
                },
            })؛
        }؛
    }

    عملية هذا_الصنف (): سـندنا[الـترويسة] {
        أرجع سـندنا[الـترويسة].أنشئ()؛
    }
}


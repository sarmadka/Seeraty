صنف الـترويسة {
    @حقنة عرف مركب: مـركب؛

    عملية هذا~هيئ() {
        عرف هذا_الكائن: سند[هذا_الصنف](هذا)؛
        هذا.المشهد = صـندوق({ }).{
            الطراز.{
                العرض = "calc(100% - 20pt)"؛
                الحشوة = ربـاعية(10، 10, 20, 10)؛
                ملء_السطر = "space-between"؛
                المحاذاة = "start"؛
                الإظهار = "flex"؛
                النسق = "column"؛
            }؛
            أضف_فروع({
                صـندوق({ }).{
                    الطراز.{
                        العرض = "100%"؛
                        الإظهار = "flex"؛
                        النسق = "row"؛
                        ملء_السطر = "space-between"؛
                        المحاذاة = "start"؛
                    }؛
                    أضف_فروع({
                        مـشهد_وثيقة().{
                            الطراز(">>$h2").{
                                حجم_الخط = 18؛
                                ارتفاع_الكتابة = 0.5؛
                            }؛
                            حدد_ماركداون(نـص(سلسلة_محارف_من_ملف["الـبيانات/تعريف.نص"]))؛
                        }،
                        ارتـباط_تشعبي().{
                            العنوان = نـص("/resume/sarmad-abdullah-resume.pdf")؛
                            حدد_الفرع(صـورة().{
                                الطراز.العرض = "30pt"؛
                                الرابط = نـص("/الموارد/pdf.svg")؛
                            })؛
                        }
                    })؛
                },
            })؛
        }؛
    }

    عملية هذا_الصنف (): سـندنا[الـترويسة] {
        أرجع سـندنا[الـترويسة].أنشئ()؛
    }
}


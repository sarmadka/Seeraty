صنف بـيانات {
    عرف نصوص: نـص؛
    عرف تعريف: نـص؛
    عرف المعلومات: نـص؛
    عرف المشاريع: نـص؛
    عرف الخبرة_المهنية: نـص؛
    عرف عن_الموقع: نـص؛

    عملية هذا~هيئ() {}
    عملية هذا~هيئ(سند[هذا_الصنف]) هذا = قيمة؛
    عملية هذا = سند[هذا_الصنف] {
        هذا.نصوص = قيمة.نصوص؛
        هذا.تعريف = قيمة.تعريف؛
        هذا.المعلومات = قيمة.المعلومات؛
        هذا.المشاريع = قيمة.المشاريع؛
        هذا.الخبرة_المهنية = قيمة.الخبرة_المهنية؛
        هذا.عن_الموقع = قيمة.عن_الموقع؛
    }
}

عرف بيانات_عربية: بـيانات؛
عرف بيانات_إنجليزية: بـيانات؛
عرف البيانات: بـيانات؛

دالة هيئ_البيانات(اللغة: نـص) {
    بيانات_عربية.{
        تعريف = نـص(سلسلة_محارف_من_ملف["الـبيانات/عـربي/تعريف.نص"])؛
        المعلومات = نـص(سلسلة_محارف_من_ملف["الـبيانات/عـربي/المعلومات.نص"])؛
        المشاريع = نـص(سلسلة_محارف_من_ملف["الـبيانات/عـربي/المشاريع.نص"])؛
        الخبرة_المهنية = نـص(سلسلة_محارف_من_ملف["الـبيانات/عـربي/الخبرة_المهنية.نص"])؛
        عن_الموقع = نـص(سلسلة_محارف_من_ملف["الـبيانات/عـربي/عن_الموقع.نص"])؛
    }؛
    بيانات_إنجليزية.{
        نصوص = نـص(سلسلة_محارف_من_ملف["الـبيانات/إنـجليزي/نصوص.po"])؛
        تعريف = نـص(سلسلة_محارف_من_ملف["الـبيانات/إنـجليزي/تعريف.نص"])؛
        المعلومات = نـص(سلسلة_محارف_من_ملف["الـبيانات/إنـجليزي/المعلومات.نص"])؛
        المشاريع = نـص(سلسلة_محارف_من_ملف["الـبيانات/إنـجليزي/المشاريع.نص"])؛
        الخبرة_المهنية = نـص(سلسلة_محارف_من_ملف["الـبيانات/إنـجليزي/الخبرة_المهنية.نص"])؛
        عن_الموقع = نـص(سلسلة_محارف_من_ملف["الـبيانات/إنـجليزي/عن_الموقع.نص"])؛
    }؛
    إذا اللغة == "ar" البيانات = بيانات_عربية وإلا البيانات = بيانات_إنجليزية؛
}

صنف بـيانات {
    عرف نصوص: نـص؛
    عرف تعريف: نـص؛
    عرف المعلومات: مـصفوفة[نـص]؛
    عرف المشاريع: مـصفوفة[نـص]؛
    عرف الخبرة_المهنية: مـصفوفة[نـص]؛
    عرف عن_الموقع: نـص؛

    عملية هذا~هيئ() {}
    عملية هذا~هيئ(سند[هذا_الصنف]) هذا = قيمة؛
    عملية هذا = سند[هذا_الصنف] {
        هذا.نصوص = قيمة.نصوص؛
        هذا.تعريف = قيمة.تعريف؛
        هذا.المعلومات = قيمة.المعلومات؛
        هذا.المشاريع = قيمة.المشاريع؛
        هذا.الخبرة_المهنية = قيمة.الخبرة_المهنية؛
        هذا.عن_الموقع = قيمة.عن_الموقع؛
    }
}

عرف بيانات_عربية: بـيانات؛
عرف بيانات_إنجليزية: بـيانات؛
عرف البيانات: بـيانات؛

دالة هيئ_البيانات(اللغة: نـص) {
    بيانات_عربية.{
        تعريف = نص_لتنف_من_ملف_ماركداون["الـبيانات/عـربي/تعريف.نص"]؛
        المعلومات = مـصفوفة[نـص]({ نصوص_لتنف_من_ملف_ماركداون["الـبيانات/عـربي/المعلومات.نص"] })؛
        المشاريع = مـصفوفة[نـص]({ نصوص_لتنف_من_ملف_ماركداون["الـبيانات/عـربي/المشاريع.نص"] })؛
        الخبرة_المهنية = مـصفوفة[نـص]({ نصوص_لتنف_من_ملف_ماركداون["الـبيانات/عـربي/الخبرة_المهنية.نص"] })؛
        عن_الموقع = نص_لتنف_من_ملف_ماركداون["الـبيانات/عـربي/عن_الموقع.نص"]؛
    }؛
    بيانات_إنجليزية.{
        نصوص = نـص(سلسلة_محارف_من_ملف["الـبيانات/إنـجليزي/نصوص.po"])؛
        تعريف = نص_لتنف_من_ملف_ماركداون["الـبيانات/إنـجليزي/تعريف.نص"]؛
        المعلومات = مـصفوفة[نـص]({ نصوص_لتنف_من_ملف_ماركداون["الـبيانات/إنـجليزي/المعلومات.نص"] })؛
        المشاريع = مـصفوفة[نـص]({ نصوص_لتنف_من_ملف_ماركداون["الـبيانات/إنـجليزي/المشاريع.نص"] })؛
        الخبرة_المهنية = مـصفوفة[نـص]({ نصوص_لتنف_من_ملف_ماركداون["الـبيانات/إنـجليزي/الخبرة_المهنية.نص"] })؛
        عن_الموقع = نص_لتنف_من_ملف_ماركداون["الـبيانات/إنـجليزي/عن_الموقع.نص"]؛
    }؛
    إذا اللغة == "ar" البيانات = بيانات_عربية وإلا البيانات = بيانات_إنجليزية؛
}

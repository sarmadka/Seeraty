صنف سـمة {
    عرف لون_الهامش: لـون؛
    عرف لون_الخلفية_الرئيسية: لـون؛
    عرف لون_خلفية_الصفحة: لـون؛
    عرف لون_خلفية_الفقرة: لـون؛
    عرف لون_خلفية_الفقرة_المختارة: لـون؛
    عرف لون_الكتابة: لـون؛
    عرف لون_الرابط: لـون؛
    عرف لون_إشعار_النجاح: لـون؛
    عرف لون_إشعار_الخطأ: لـون؛
    عرف زر_للأعلى: نـص؛
    عرف زر_للأسفل: نـص؛
    عرف زر_نمط_الألوان: نـص؛

    عملية هذا~هيئ() {}
    عملية هذا~هيئ(سند[هذا_الصنف]) هذا = قيمة؛
    عملية هذا = سند[هذا_الصنف] {
        هذا.لون_الهامش = قيمة.لون_الهامش؛
        هذا.لون_الخلفية_الرئيسية = قيمة.لون_الخلفية_الرئيسية؛
        هذا.لون_خلفية_الصفحة = قيمة.لون_خلفية_الصفحة؛
        هذا.لون_خلفية_الفقرة = قيمة.لون_خلفية_الفقرة؛
        هذا.لون_خلفية_الفقرة_المختارة = قيمة.لون_خلفية_الفقرة_المختارة؛
        هذا.لون_الكتابة = قيمة.لون_الكتابة؛
        هذا.لون_الرابط = قيمة.لون_الرابط؛
        هذا.لون_إشعار_النجاح = قيمة.لون_إشعار_النجاح؛
        هذا.لون_إشعار_الخطأ = قيمة.لون_إشعار_الخطأ؛
        هذا.زر_للأعلى = قيمة.زر_للأعلى؛
        هذا.زر_للأسفل = قيمة.زر_للأسفل؛
        هذا.زر_نمط_الألوان = قيمة.زر_نمط_الألوان؛
    }
}

عرف سمة_داكنة: سـمة؛
عرف سمة_فاتحة: سـمة؛
عرف السمة: سـمة؛

دالة هيئ_السمات(نمط: نـص) {
    سمة_داكنة.{
        لون_الهامش = لـون(36، 36، 36)؛
        لون_الخلفية_الرئيسية = لـون("2d333b")؛
        لون_خلفية_الصفحة = لـون("4f5967")؛
        لون_خلفية_الفقرة = لـون("434c58")؛
        لون_خلفية_الفقرة_المختارة = لـون("434458")؛
        لون_الكتابة = لـون(255، 255، 255)؛
        لون_الرابط = لـون(180، 230، 255)؛
        لون_إشعار_النجاح = لـون(200، 255، 200)؛
        لون_إشعار_الخطأ = لـون(255، 200، 200)؛
        زر_للأعلى = نـص("/الموارد/للأعلى2.svg")؛
        زر_للأسفل = نـص("/الموارد/للأسفل2.svg")؛
        زر_نمط_الألوان = نـص("/الموارد/نمط_فاتح.svg")؛
    }؛

    سمة_فاتحة.{
        لون_الهامش = لـون(220، 220، 220)؛
        لون_الخلفية_الرئيسية = لـون("f0ebdb")؛
        لون_خلفية_الصفحة = لـون("ffffff")؛
        لون_خلفية_الفقرة = لـون("f0ebdb")؛
        لون_خلفية_الفقرة_المختارة = لـون("f0e4db")؛
        لون_الكتابة = لـون(0، 0، 0)؛
        لون_الرابط = لـون(0، 80، 128)؛
        لون_إشعار_النجاح = لـون(50، 128، 50)؛
        لون_إشعار_الخطأ = لـون(128، 50، 50)؛
        زر_للأعلى = نـص("/الموارد/للأعلى.svg")؛
        زر_للأسفل = نـص("/الموارد/للأسفل.svg")؛
        زر_نمط_الألوان = نـص("/الموارد/نمط_داكن.svg")؛
    }؛

    إذا نمط == "فاتح" السمة = سمة_فاتحة وإلا السمة = سمة_داكنة؛
}

//==============================================================================
// الخادم

@مسار_موارد عرف مسار_الموارد: "الموارد/"؛

//==============================================================================
// صـفحات واجهة المستخدم

@منفذ_مرئي["/*", "مثال منصة الويب"]
دالة رئيسي {
    انتظر(ريـكابجا.هيئ_الواجهة())؛
    حدد_ميزة_عنصر("body", "style", "padding: 0; margin: 0; word-break: break-word;")؛
    حمل_خط("AlususMono", "/الموارد/AlususMono.otf")؛

    نـافذة.النموذج.حدد_المشهد(صـندوق({}).{
        الطراز.{
            العرض = "100%"؛
            الإظهار = "flex"؛
            النسق = "column"؛
            المحاذاة = "center"؛
            الاتجاه = "rtl"؛
            فئة_الخط = "AlususMono"؛
            الخلفية = لـون("888")؛
        }؛
        أضف_فروع({
            صـندوق({}).{
                الطراز.{
                    العرض = "100%"؛
                    الإظهار = "flex"؛
                    النسق = "column"؛
                    أقصى_عرض = "800pt"؛
                    الخلفية = لـون("aaa")؛
                }؛
                أضف_فروع({
                    الـترويسة(),
                    مـبدال_أيقوني()
                })؛
            }
        })؛
    })؛

    نفذ_حلقة_معالجة_الأحداث()؛
}

ريـكابجا.هيئ_الخادم()؛
طـرفية.اطبع("تشغيل الخادم على المنفذ 8010...\nURL: http://localhost:8010/\n")؛
شغل_الخادم({ "listening_ports"، "8010"، "static_file_max_age"، "0" })؛

صنف مـشهد_المعلومات {
    @حقنة عرف محتوى_أيقوني: مـحتوى_أيقوني؛
    
    عملية هذا~هيئ() {
        هذا.المشهد = مـشهد_وثيقة().{
            الطراز.{
                الإظهار = "flex"؛
                النسق = "column"؛
                ملء_السطر = "start"؛
                المحاذاة = "start"؛
                العرض = "calc(100vw - 30pt)"؛
                الطول = "calc(100% - 60pt)"؛
                الفيض = "scroll"؛
                الهامش = ربـاعية(5)؛
            }؛
            حدد_ماركداون(نـص(سلسلة_محارف_من_ملف["الـبيانات/معلومات.نص"]))؛
        }؛
    }

    عملية (هذا: مـحتوى_أيقوني).قد_تغير_العرض(عرض: صـحيح) حدد_مؤشر {
        هذا.المشهد.الطراز.العرض = نـص.املأ("calc(%ipx - 30pt)"، عرض)؛
    }

    عملية هذا_الصنف (): سـندنا[مـشهد_المعلومات] {
        أرجع سـندنا[مـشهد_المعلومات]().{ احجز()~هيئ() }؛
    }
}

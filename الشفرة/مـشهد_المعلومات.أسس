صنف مـشهد_المعلومات {
    @حقنة عرف مركب: مـركب؛
    
    عملية هذا~هيئ() {
        هذا.المشهد = مـشهد_وثيقة().{
            الطراز.{
                الإظهار = "flex"؛
                النسق = "column"؛
                ملء_السطر = "start"؛
                المحاذاة = "start"؛
                العرض = "calc(100vw - 30pt)"؛
                الطول = "calc(100% - 60pt)"؛
                الفيض = "scroll"؛
                الهامش = ربـاعية(5)؛
            }؛
            حدد_ماركداون(نـص(سلسلة_محارف_من_ملف["الـبيانات/معلومات.نص"]))؛
        }؛
    }

    عملية هذا_الصنف (): سـندنا[مـشهد_المعلومات] {
        أرجع سـندنا[مـشهد_المعلومات]().{ احجز()~هيئ() }؛
    }
}
